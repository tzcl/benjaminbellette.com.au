---
import Layout from '../layouts/Layout.astro'
import LogoSpinner from '../components/LogoSpinner.astro'
import BackgroundVideo from '../components/BackgroundVideo.astro'
---

<Layout title="Benjamin Bellette" description="Melbourne and Sydney based cinematographer">
	<BackgroundVideo />
	<div class="center">
		<LogoSpinner link="/motion" />
		<h1 class="child">Benjamin Bellette</h1>
		<h4 class="child">Director of Photography</h4>
	</div>
</Layout>

<style>
	body {
		background: #111;
	}

	.center {
		position: relative;
		display: grid;
		place-content: center;
		height: 100%;
	}

	h1,
	h4 {
		text-transform: uppercase;
		color: white;
		margin: auto;
	}
</style>