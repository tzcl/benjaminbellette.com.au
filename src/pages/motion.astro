---
import Slider from "../components/dynamic/Slider.svelte";
import Tile from "../components/dynamic/Tile.svelte";
import Page from "../layouts/Page.astro";
import { hero, tiles } from "../data/motion";
---

<!-- TODO: fix up description... -->
<Page
  title="Benjamin Bellette | Motion"
  description="Melbourne and Sydney-based cinematographer."
>
  <Slider client:idle title="Motion" pics={hero} />
  <section id="reel">
    <h2 class="subtitle">Reel</h2>
    <iframe
      src="https://player.vimeo.com/video/316965018?title=0&byline=0&portrait=0"
      title="2019 Reel Benjamin Bellette"
      frameborder="0"
      width="100%"
      height="100%"
      allow="autoplay; fullscreen; picture-in-picture;"
      allowfullscreen
