---
import Page from "../layouts/Page.astro"
---

<Page title="Benjamin Bellette | Contact" description="What to put here??">
    <section>
        <h1 class="title">Contact</h1>
        <div class="contact-items">
            <div class="contact-item">
                <span class="ci-icon"><i class="fa fa-phone"></i></span>
                <p class="ci-alt">Call</p>
                <a class="ci-text" href="tel:+61413803095">+61 413 803 095</a>
            </div>
            <div class="contact-item">
                <span class="ci-icon"><i class="fa fa-map-marker"></i></span>
                <p class="ci-alt">Location</p>
                <p class="ci-text">Melbourne & Sydney</p>
            </div>
            <div class="contact-item">
                <span class="ci-icon"><i class="fa fa-envelope"></i></span>
                <p class="ci-alt">Email</p>
                <a class="ci-text" href="mailto:ben.bellette@gmail.com">ben.bellette@gmail.com</a>
            </div>
        </div>
    </section>
</Page>

<style>
    section {
        margin-bottom: 3rem;
    }

    .contact-items {
        display: flex;
        flex-direction: column;
        width: fit-content;
        margin: 0 auto;
        margin-top: 2.5rem;
    }

    .contact-item {
        position: relative;
        padding-left: 3rem;
        padding-bottom: 1.5rem;
        margin-left: 1em;
        color: #444;
    }

    @media (min-width: 45rem) {
        .contact-items {
            flex-direction: row;
            justify-content: space-between;
            width: clamp(40rem, 95%, 55rem);
        }

        .contact-item {
            padding-bottom: 0;
        }
    }

    .ci-icon {
        position: absolute;
        top: 10px;
        left: 3px;
        width: 23px;
        height: 23px;
        line-height: 23px;
        text-align: center;
        color: #fff;

        font-size: 12px;
    }

    .ci-icon i {
        position: relative;
    }

    .ci-icon:before {
        content: "";
        width: 100%;
        height: 100%;
        position: absolute;
        top: 0;
        left: 0;
        background-color: hsl(0 0% 20%);
        transform: rotate(45deg);
    }

    .ci-alt {
        color: #777;
        font-size: 0.75em;
        font-weight: 400;
        letter-spacing: 0.3em;
    }

    .ci-text {
        text-transform: none;
        text-decoration: none;
        letter-spacing: ;
        font-size: 0.9em;
        letter-spacing: 0;
    }

    a:hover {
        color: #b1b1b1;
    }
</style>