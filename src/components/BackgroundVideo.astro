---
export interface Props {
}
---

<div class="outer">
    <div class="inner">
        <iframe src="https://player.vimeo.com/video/316965018?background=1" frameborder="0" allow="autoplay" />
    </div>
</div>

<style>
    .outer {
        position: absolute;
        width: 100%;
        height: 100%;
    }

    .inner {
        position: relative;
        overflow: hidden;
        width: 100vw;
        height: 100vh;

        background-color: #111;
    }

    iframe {
        background-color: transparent;
        opacity: 0.4;
        position: absolute;
        top: 50%;
        left: 50%;
        width: 100vw;
        height: 100vh;
        transform: translate(-50%, -50%);
    }

    @media (min-aspect-ratio: 16/9) {
        iframe {
            /* height = (9 / 16) * 100 */
            height: 56.25vw;
        }
    }

    @media (max-aspect-ratio: 16/9) {
        iframe {
            /* width = 100 / (9 / 16) */
            width: 177.78vh;
        }
    }
</style>