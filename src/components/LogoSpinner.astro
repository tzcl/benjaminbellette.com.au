---
import logo from "../assets/logo.svg"

export interface Props {
    link: string
}

const { link } = Astro.props
---

<a href={link}>
    <img width="252" height="148" draggable="false" src={logo} />
</a>

<style>
    a {
        margin: 50px auto;
    }

    img {
        border-radius: 50%;
        user-select: none;
        transform: rotate(0);
        transition: transform 0.6s ease-in-out;
    }

    img:hover {
        transform: rotate(90deg);
    }

    @media (hover: none) {
        @keyframes rotate {
            0% {
                transform: rotate(0);
            }

            100% {
                transform: rotate(90deg);
            }
        }

        img {
            animation: rotate 0.75s ease-out 2s forwards;
        }
    }
</style>